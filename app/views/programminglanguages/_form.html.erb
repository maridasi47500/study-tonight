<%= form_with(model: programminglanguage) do |form| %>
  <% if programminglanguage.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(programminglanguage.errors.count, "error") %> prohibited this programminglanguage from being saved:</h2>

      <ul>
        <% programminglanguage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :code, style: "display: block" %>
    (pour python c'est python3 -c pour ruby c'est ruby -e)
    <%= form.text_field :code %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
