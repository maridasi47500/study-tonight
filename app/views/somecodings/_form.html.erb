<%= form_with(model: somecoding) do |form| %>
  <% if somecoding.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(somecoding.errors.count, "error") %> prohibited this somecoding from being saved:</h2>

      <ul>
        <% somecoding.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :coding_id, style: "display: block" %>
    <%= form.number_field :coding_id %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :pic, style: "display: block" %>
    <%= form.file_field :pic %>
  </div>
  <%=form.fields_for :anycodings do |f|%>
        <p>some coding #<%=f.index + 1%> </p>
            <div class="card">
                <div class="card-body">
                      <%= f.label :name, style: "display: block" %>
                          <%= f.text_field :name %>
                            </div>

                              <div class="card-body">
                                    <%= f.label :content, style: "display: block" %>
                                        <%= f.text_area :content %>
                                          </div>
                              <div class="card-body">
                                    <%= f.label :code, style: "display: block" %>
                                        <%= f.text_area :code %>
                                          </div>
                                            </div>
                                              <%end%>

  <div>
    <%= form.submit %>
  </div>
<% end %>
